<GridPane alignment="center" hgap="10" prefHeight="660.0" prefWidth="930.0" stylesheets="chart.style.css" vgap="10" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">

    <columnConstraints>
        <ColumnConstraints />
        <ColumnConstraints />
        <ColumnConstraints />
    </columnConstraints>

    <rowConstraints>
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
        <RowConstraints />
    </rowConstraints>

    <children>
        <Button mnemonicParsing="false" onAction="#clickApply" prefHeight="25.0" prefWidth="110.0" text="Button" GridPane.columnIndex="1" GridPane.rowIndex="3" />
        <ChoiceBox fx:id="selectFiles" onDragDetected="#selectSignalFile" prefWidth="150.0" GridPane.columnIndex="1" GridPane.rowIndex="2" />
        <LineChart fx:id="chart" maxWidth="1201.0" prefHeight="562.0" prefWidth="910.0" GridPane.columnIndex="1" GridPane.rowIndex="4">
            <xAxis>
                <NumberAxis side="BOTTOM" />
            </xAxis>
            <yAxis>
                <NumberAxis side="LEFT" />
            </yAxis>
            <cursor>
                <Cursor fx:constant="CROSSHAIR" />
            </cursor>
        </LineChart>
    </children>

</GridPane>
